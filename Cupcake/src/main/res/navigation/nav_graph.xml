<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/startFragment">

    <fragment
        android:id="@+id/flavorFragment"
        android:name="im.syf.cupcake.FlavorFragment"
        android:label="@string/choose_flavor"
        tools:layout="@layout/fragment_flavor">

        <action
            android:id="@+id/to_pickupFragment"
            app:destination="@id/pickupFragment" />

    </fragment>

    <fragment
        android:id="@+id/pickupFragment"
        android:name="im.syf.cupcake.PickupFragment"
        android:label="@string/choose_pickup_date"
        tools:layout="@layout/fragment_pickup">

        <action
            android:id="@+id/to_summaryFragment"
            app:destination="@id/summaryFragment" />

    </fragment>

    <fragment
        android:id="@+id/startFragment"
        android:name="im.syf.cupcake.StartFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_start">

        <action
            android:id="@+id/to_flavorFragment"
            app:destination="@id/flavorFragment" />

    </fragment>

    <fragment
        android:id="@+id/summaryFragment"
        android:name="im.syf.cupcake.SummaryFragment"
        android:label="@string/order_summary"
        tools:layout="@layout/fragment_summary" />

</navigation>
